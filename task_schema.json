{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Task Document",
    "type": "object",
    "properties": {
        "completed": {
            "description": "Indicates if the task has been completed",
            "type": "boolean",
            "examples": [
                false
            ]
        },
        "created": {
            "description": "The timestamp when the task was created in ISO 8601 format with timezone",
            "type": "string",
            "format": "date-time",
            "examples": [
                "2024-09-23T23:38:56-04:00"
            ]
        },
        "details": {
            "description": "Details or description of the task",
            "type": "string",
            "minLength": 1,
            "examples": [
                "testing"
            ]
        },
        "title": {
            "description": "Title of the task",
            "type": "string",
            "minLength": 1,
            "examples": [
                "testing"
            ]
        },
        "user": {
            "description": "Reference to the user who created the task, stored as a Firestore document path",
            "type": "string",
            "pattern": "^/users/[a-zA-Z0-9]{28}$",
            "examples": [
                "/users/xZjFCvWY2Laux7v0ELtVnO4SKLW2"
            ]
        }
    },
    "required": [
        "completed",
        "created",
        "details",
        "title",
        "user"
    ],
    "additionalProperties": false
}